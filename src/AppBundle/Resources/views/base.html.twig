{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter="less"
    'bundles/app/css/style.css'
    'bundles/app/css/headers.css'
    'bundles/app/css/main.less'
    output="css/main.css" %}
        <link rel="stylesheet" href="{{ asset(asset_url) }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output="js/main.js"
        'bundles/app/js/main.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}